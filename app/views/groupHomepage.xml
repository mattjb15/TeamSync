<Alloy>
	<Window class="container" layout="vertical" id="groupHomepageWin">
		<View id="header">
			<View id="appIcon"></View>
			<Label id="pageTitle">TeamSync</Label>
			<View id="avatar"></View>
		</View>	
			<TableView id="groupMain" height="Ti.UI.FILL">
				<TableViewRow height="Ti.UI.FILL">
					<View class="groupContainer">
						<Label id="groupName">Group Name</Label>
						<Label id="groupDescription">Group Description</Label>
						<View id="view1" onClick="loadGroupNotices" backgroundColor="red" width="100" height="100"><Label>Notices</Label></View>
						<View id="view2" onClick="loadGroupEvents" backgroundColor="green" width="100" height="100"><Label>Events</Label></View>	 
						<View id="view3" onClick="loadMemberlist" backgroundColor="blue" width="100" height="100"><Label>Members</Label></View>
						<View id="view4" backgroundColor="yellow" width="100" height="100"><Label>Settings</Label></View>
						<View id="view5" backgroundColor="red" width="100" height="100"><Label>Admin</Label></View>
						<View id="view6" backgroundColor="green" width="100" height="100"><Label>Other</Label></View>
					</View>	
				</TableViewRow>
			</TableView>
	</Window>
</Alloy>
