<Alloy>
	<Window class="container" layout="vertical" id="useroptionsWin">
		<View id="header">
			<View id="appIcon"></View>
			<Label id="appTitle">TeamSync</Label>
			<View id="avatar"></View>
		</View>	
		
		<TextField id="firstName"  top="10"  width="250" height="30" hintText="First Name"/>
		<TextField id="lastName"  top="10"  width="250" height="30" hintText="Last Name"/>
		<TextField  id="password"  passwordMask="true" top="10"  width="250" height="30" hintText="New Password"/>
		<TextField  id="confirmPassword"  passwordMask="true" top="10"  width="250" height="30" hintText="Confirm Password"/>
		<TextField  id="currentPassword"  passwordMask="true" top="10"  width="250" height="30" hintText="Current Password"/>
		<Button top="10" onClick="updateOptions">Update</Button>
	</Window>
</Alloy>
