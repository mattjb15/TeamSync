<Alloy>
	<Window class="container" layout="vertical">
		<View id="header">
			<View id="appIcon"></View>
			<Label id="appTitle">TeamSync</Label>
		</View>	
		
		<Label id="pageTitle" top="10">Add Notice</Label>
		<TextField id="noticeName"  top="25"  width="75%" height="30" hintText="Notice Name"/>
		<TextField  id="noticDescription" top="10"  width="75%" height="30" hintText="Notice Description"/>	
		 <Picker id="picker" top="10" selectionIndicator="true" useSpinner="true" width="75%" height="120">
            <PickerColumn id="column1">
                <PickerRow title="role 1"/>
                <PickerRow title="role 2"/>
                <PickerRow title="role 3"/>
                <PickerRow title="role 4"/>
            </PickerColumn>
        </Picker>
		<Button top="10" width="75%">Add Notice</Button>
	</Window>
</Alloy>
