<Alloy>
	<Window class="container" layout="vertical">
		<View id="header">
			<View id="appIcon"></View>
			<Label id="appTitle">TeamSync</Label>
		</View>	
		
		<Label id="pageTitle" top="10">Sign In</Label>
		<TextField id="username"  top="25"  width="75%" height="30" hintText="Username"/>
		<TextField  id="password"  passwordMask="true" top="10"  width="75%" height="30" hintText="Password"/>
		<Button top="10" width="75%">Sign In</Button>
		<Button top="10" width="75%">Sign Up</Button>
		<Label id="resetPassword" top="10">Reset password...</Label>
	</Window>
</Alloy>
