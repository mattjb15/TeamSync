<Alloy>
	<Window class="container" layout="vertical" id="signinWin">
		<View id="header">
			<View id="appIcon" onClick="Alloy.Globals.loadIndex"></View>
			<Label id="appTitle">TeamSync</Label>
		</View>	
		
		<Label id="pageTitle" top="10">Sign In</Label>
		<TextField id="username"  top="100"  width="250" height="60" hintText="Username"/>
		<TextField  id="password"  passwordMask="true" top="10"  width="250" height="60" hintText="Password"/>
		<Button top="10" onClick="login">Sign In</Button>
		<Button top="10" onClick="loadSignup">Sign Up</Button>
		<Label id="resetPassword" top="10">Reset password...</Label>
	</Window>
</Alloy>
