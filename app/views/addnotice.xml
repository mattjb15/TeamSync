<Alloy>
	<Window class="container" layout="vertical" id="addNoticeWin">
		<View id="header">
			<View id="appIcon" onClick="Alloy.Globals.loadIndex"></View>
			<Label id="appTitle">TeamSync</Label>
		</View>	
		
		<Label id="pageTitle" top="10">Add Notice</Label>
		<TextField id="noticeName"  top="25"  width="75%" height="60" hintText="Notice Name"/>
		<TextField  id="noticeDescription" top="10"  width="75%" height="60" hintText="Notice Description"/>	
		 <Picker id="picker" top="10" selectionIndicator="true" useSpinner="true" width="75%" height="180">
            <PickerColumn id="column1">
            </PickerColumn>
        </Picker>
		<Button top="10" width="75%" onClick="addNotice">Add Notice</Button>
	</Window>
</Alloy>
